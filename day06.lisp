(defparameter *input*
  "")


(defun puzzle-01 (&key (input *input*))
  (loop
    for i from 0
    for (a b c d) on (coerce input 'list)
    when (= 4 (length (delete-duplicates (list a b c d))))
      return (+ i 4)))

(defun puzzle-02 (&key (input *input*))
  (labels ((process (str n k)
	     (let ((strn (subseq str 0 n)))
	       (if (= n (length (delete-duplicates (coerce strn 'list))))
		   (+ n k)
		   (process (subseq str 1) n (1+ k))))))
    (process input 14 0)))
